<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorHint">@color/primary</item>
    </style>

    <style name="ProgressBarTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/progress_bar</item>
    </style>

    <style name="AppTheme.PrimaryText" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.SecondaryText" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="AppTheme.Button" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/button_background</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.ButtonContrast" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/button_background</item>
        <item name="android:background">@color/button_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.FrameButton" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@drawable/bg_frame_btn</item>
        <item name="android:textColor">@color/frame_button_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
